{
  "kind": "collectionType",
  "collectionName": "design_requests",
  "info": {
    "singularName": "design-request",
    "pluralName": "design-requests",
    "displayName": "Design Request",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "fabric_preferences": {
      "type": "enumeration",
      "enum": [
        "Cotton",
        "Polyester",
        "Silk"
      ]
    },
    "color_preferences": {
      "type": "string"
    },
    "deadline": {
      "type": "date"
    },
    "budget": {
      "type": "decimal"
    },
    "special_instructions": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "users": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "design_requests"
    },
    "contactNumber": {
      "type": "integer"
    },
    "size": {
      "type": "string"
    },
    "chest": {
      "type": "string"
    },
    "waist": {
      "type": "string"
    },
    "custom_design": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::custom-design.custom-design",
      "inversedBy": "design_requests"
    }
  }
}
